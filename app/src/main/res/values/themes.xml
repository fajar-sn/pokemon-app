<resources>
    <!-- Base application theme. -->
    <style name="Theme.PokemonApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PokemonApp.TextTheme" />

    <style name="Theme.PokemonApp.TextTheme.Headline">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:lineHeight">32dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.PokemonApp.TextTheme.Subtitle3">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:lineHeight">16dp</item>

    </style>

    <style name="Theme.PokemonApp.TextTheme.Subtitle1">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">16dp</item>
    </style>

    <style name="Theme.PokemonApp.TextTheme.Subtitle2">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16dp</item>
    </style>

    <style name="Theme.PokemonApp.TextTheme.Body1">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">14sp</item>
        <item name="android:lineHeight">16dp</item>
    </style>

    <style name="Theme.PokemonApp.TextTheme.Body2">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineHeight">16dp</item>
    </style>

    <style name="Theme.PokemonApp.TextTheme.Body3">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">10sp</item>
        <item name="android:lineHeight">16dp</item>
    </style>

    <style name="Theme.PokemonApp.TextTheme.Caption">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">8sp</item>
        <item name="android:lineHeight">12dp</item>
    </style>
</resources>